@model task_3.Models.LoginModel

<h2>Login</h2>
 
<a asp-action="Register" asp-controller="Home">Register</a>
 
<form asp-action="Login" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email" class="login-labels">Enter E-mail</label>
            <input type="email" asp-for="Email" class="login-input"/>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="login-labels">Enter password</label>
            <input asp-for="Password" class="login-input"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-outline-primary"/>
        </div>
    </div>
</form>