@model task_3.Models.RegisterModel

@* class="btn btn-outline-dark"  *@
<h2>Register</h2>
<a asp-action="Login" asp-controller="Home">Login</a>
<form asp-action="Register" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly">
        
    </div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br/>
            <input type="email" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="Name">Enter name</label><br/>
            <input type="text" asp-for="Name"/>
            <span asp-validation-for="Name"/>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <input type="submit" value="Register" class="btn btn-outline-primary"/>
        </div>
    </div>
</form>